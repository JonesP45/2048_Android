<?xml version="1.0" encoding="utf-8"?>
<fr.univ_orleans.a2048.Layouts.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainFragment">
<GridLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:columnCount="4"
    android:rowCount="4"
    android:background="#6F514C" >

    <Button
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="0, 0" />

    <Button
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="0, 1" />

    <Button
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="0, 2" />

    <Button
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="0, 3" />


    <Button
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="1, 0" />

    <Button
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="1, 1" />

    <Button
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="1, 2" />

    <Button
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="1, 3" />


    <Button
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="2, 0" />

    <Button
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="2, 1" />

    <Button
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="2, 2" />

    <Button
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="2, 3" />


    <Button
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="3, 0" />

    <Button
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="3, 1" />

    <Button
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="3, 2" />

    <Button
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:foreground="@color/btnColor"
        android:text="3, 3" />

</GridLayout>
</fr.univ_orleans.a2048.Layouts.SquareLayout>

