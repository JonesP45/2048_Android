<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.test.TestFragment"

    android:gravity="center"
    android:background="#D8DCF0"
    android:layout_weight="7"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:textSize="45dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>


        <Button
            android:id="@+id/button_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="" />

        <Button
            android:id="@+id/button_best_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Join the numbers and get to the "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="2048 tile!"
            android:textStyle="bold"/>
    </LinearLayout>
    <fr.univ_orleans.a2048.layouts.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="#BBADA0"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_0_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_0_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />


            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_0_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_0_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_1_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />


            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_1_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_1_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />


            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_1_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_2_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_2_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_2_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_2_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_3_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_3_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />


            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_3_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

            <fr.univ_orleans.a2048.layouts.SquareButton
                android:id="@+id/button_3_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@color/btnColor" />

        </LinearLayout>
    </fr.univ_orleans.a2048.layouts.SquareLayout>

</LinearLayout>
