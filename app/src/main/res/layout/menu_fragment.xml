<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.univ_orleans.a2048.fragments.MenuFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/bkColor">

    <Button
        android:id="@+id/fragment_menu_bouton_reprendre_jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reprendre le jeu"
        android:background="#00000000"
        android:textColor="#FFF"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/fragment_menu_bouton_nouveau_jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouveau jeu"
        android:background="#00000000"
        android:textColor="#FFF"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/fragment_menu_bouton_meilleur_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meilleur score"
        android:background="#00000000"
        android:textColor="#FFF"
        android:textSize="30sp"/>

</LinearLayout>
